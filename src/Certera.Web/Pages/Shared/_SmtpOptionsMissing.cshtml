@using Certera.Integrations.Notification.Notifiers;
@using Microsoft.Extensions.Options
@inject IOptionsSnapshot<MailNotifierOptions> mailOptions

@if (string.IsNullOrWhiteSpace(mailOptions.Value.Host))
{
    <div class="row space-bottom alert">
        <span class="btn-close" onclick="this.parentElement.style.display='none';">&times;</span>
        Configure SMTP settings in the config.json file
    </div>
}